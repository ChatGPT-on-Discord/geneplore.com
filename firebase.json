{
  "hosting": {
    "public": "site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites":
    [
      {
        "source": "/link",
        "destination": "/link.html"
      },
      {
        "source": "/gift",
        "destination": "/gift.html"
      },
      {
        "source": "/success",
        "destination": "/success.html"
      },
      {
        "source": "/*",
        "function": {
          "functionId": "link-shortener",
          "region": "us-central1"
        }
      }
    ],
    "redirects":
    [
      {
        "source": "/terms",
        "destination": "https://geneplore.com/terms",
        "type": 301
      },
      {
        "source": "/",
        "destination": "https://geneplore.com",
        "type": 301
      }
    ]
  }

}
